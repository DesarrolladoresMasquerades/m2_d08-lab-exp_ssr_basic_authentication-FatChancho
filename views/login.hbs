  <div class="flex">
    <button class="goback"><a href="/auth/signup">Sign here</a></button>
    <button class="goback"><a href="/">main</a></button>
  </div>
  
</div>

{{#if errorMessage}}
  <p>{{errorMessage}}</p>
{{/if}}
</div>